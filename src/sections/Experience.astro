---
import { experience } from '../data/experience';
---

<section id="experience" class="py-20 bg-night text-white overflow-hidden relative">
    <div class="container mx-auto px-4 max-w-4xl relative z-10">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Mi Trayectoria Profesional</h2>
            <p class="text-gray-400 text-lg">Un recorrido a través de los años y las experiencias.</p>
        </div>

        <div class="relative">
            <!-- Vertical Line -->
            <div class="absolute left-8 md:left-12 top-0 bottom-0 w-px bg-white/10 hidden sm:block"></div>

            <div class="space-y-12">
                {experience.map((item, index) => (
                    <div class="relative flex flex-col sm:flex-row gap-8 group">
                        <!-- Icon Wrapper -->
                        <div class={`
                            shrink-0 w-12 h-12 rounded-2xl flex items-center justify-center border z-10 relative sm:ml-2 md:ml-6
                            ${item.active 
                                ? 'bg-night border-warm-orange text-warm-orange shadow-[0_0_15px_rgba(255,107,0,0.3)]' 
                                : 'bg-night border-white/10 text-gray-400 group-hover:border-white/30 group-hover:text-gray-300 transition-colors'}
                        `}>
                            <item.icon class="w-5 h-5" />
                        </div>

                        <!-- Content -->
                        <div class="flex-1 pt-2">
                            <div class="flex flex-col md:flex-row md:items-center justify-between mb-2">
                                <h3 class="text-2xl font-bold text-white group-hover:text-warm-orange transition-colors duration-300">
                                    {item.title}
                                </h3>
                                <span class={`
                                    text-sm font-mono mt-2 md:mt-0 px-3 py-1 rounded
                                    ${item.active 
                                        ? 'bg-warm-orange/10 text-warm-orange border border-warm-orange/20' 
                                        : 'text-gray-500'}
                                `}>
                                    {item.dates}
                                </span>
                            </div>
                            
                            <h4 class="text-lg text-gray-400 mb-4 font-medium">{item.company}</h4>
                            
                            <p class="text-gray-400 leading-relaxed max-w-2xl text-base group-hover:text-gray-300 transition-colors duration-300">
                                {item.description}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
    
    <!-- Background Gradient Effect -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-warm-orange/5 rounded-full blur-3xl -z-10 pointer-events-none"></div>
</section>
