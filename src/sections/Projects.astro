---
import { Github, Globe, Lock } from "@lucide/astro";
import { projects } from "../data/projects";
---

<section id="projects" class="py-20 px-6 text-white scroll-mt-20">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
                Mis <span class="text-warm-orange">Proyectos</span>
            </h2>
            <p class="text-gray-400 text-lg">Una selección de mis trabajos recientes.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {projects.map((project) => (
                <article class={`
                    relative bg-night rounded-2xl overflow-hidden border border-white/5 transition-all duration-500 group flex flex-col h-full
                    ${project.comingSoon ? 'opacity-80' : 'hover:transform hover:scale-[1.02] hover:shadow-[0_0_30px_rgba(255,107,0,0.1)] hover:border-warm-orange/30'}
                `}>
                    
                    {/* Image / Header Area */}
                    <div class={`
                        h-52 relative overflow-hidden shrink-0
                        ${project.comingSoon ? 'bg-white/5' : 'bg-linear-to-br from-white/10 to-transparent group-hover:from-warm-orange/10 transition-colors duration-500'}
                    `}>
                        {project.comingSoon ? (
                            <div class="absolute inset-0 flex flex-col items-center justify-center text-white/30 gap-3">
                                <Lock class="w-12 h-12" />
                                <span class="font-bold tracking-widest text-sm uppercase">Coming Soon</span>
                            </div>
                        ) : (
                            <div class="absolute inset-0 flex items-center justify-center text-white/20 group-hover:text-warm-orange/40 transition-colors duration-500">
                                <span class="text-7xl font-black opacity-10 select-none group-hover:scale-110 transition-transform duration-700">DEV</span>
                            </div>
                        )}
                        
                        {/* Overlay Gradient */}
                        <div class="absolute inset-0 bg-linear-to-t from-night via-night/50 to-transparent"></div>
                    </div>
                    
                    {/* Content */}
                    <div class={`p-6 flex flex-col grow relative ${project.comingSoon && 'blur-[1px] select-none pointer-events-none'}`}>
                        <h3 class="text-2xl font-bold mb-3 text-white group-hover:text-warm-orange transition-colors duration-300">
                            {project.title}
                        </h3>
                        <p class="text-gray-400 mb-6 line-clamp-3 text-sm leading-relaxed">
                            {project.description}
                        </p>
                        
                        <div class="flex flex-wrap gap-2 mb-8 mt-auto">
                            {project.tags.map((tag) => (
                                <span class="px-3 py-1 bg-white/5 text-xs font-medium text-warm-orange/90 rounded-full border border-white/10">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <div class="flex gap-4 pt-4 border-t border-white/5">
                            <a 
                                href={project.github} 
                                class="flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-white transition-colors"
                            >
                                <Github class="w-4 h-4" /> Code
                            </a>
                            <a 
                                href={project.demo} 
                                class="flex items-center gap-2 text-sm font-medium text-warm-orange hover:text-white transition-colors ml-auto"
                            >
                                <Globe class="w-4 h-4" /> Live Demo
                            </a>
                        </div>
                    </div>

                    {/* Coming Soon Overlay (Extra layer for interaction blocking) */}
                    {project.comingSoon && (
                        <div class="absolute inset-0 z-20 bg-night/20 backdrop-blur-[2px] flex items-center justify-center opacity-0 hover:opacity-100 transition-opacity duration-300">
                            <span class="px-4 py-2 bg-night border border-white/10 rounded-full text-sm font-mono text-gray-300 shadow-lg">
                                En Construcción
                            </span>
                        </div>
                    )}
                </article>
            ))}
        </div>
    </div>
</section>
